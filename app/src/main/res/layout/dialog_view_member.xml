<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorTransparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background_primary"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <TextView
            android:id="@+id/view_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            style="@style/Widget.AppCompat.EditText"
            android:background="@drawable/round_edittext"
            android:ems="10"
            android:gravity="start|top"
            android:paddingStart="10dp"
            android:paddingBottom="3dp"
            android:clickable="false"
            android:focusable="false"
            android:text="Relocation Site, Laoy, Olingan, Dipolog City"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_age5" />

        <TextView
            android:id="@+id/textview_age5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:text="ADDRESS"
            android:textColor="#21618C"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_gender" />

        <TextView
            android:id="@+id/view_cstatus"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_edittext"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="start|top"
            android:paddingBottom="3dp"
            android:text="widowed"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_age4"
            app:layout_constraintTop_toBottomOf="@+id/view_age" />

        <TextView
            android:id="@+id/textview_age4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-black"
            android:text="C. STATUS"
            android:textColor="#21618C"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/view_gender"
            app:layout_constraintTop_toBottomOf="@+id/view_bdate" />

        <TextView
            android:id="@+id/view_gender"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_edittext"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="start|top"
            android:paddingBottom="3dp"
            android:text="female"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textview_age3"
            app:layout_constraintTop_toBottomOf="@+id/view_age" />

        <TextView
            android:id="@+id/textview_age3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:text="SEX"
            android:textColor="#21618C"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_age" />

        <TextView
            android:id="@+id/view_bdate"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_edittext"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="start|top"
            android:paddingStart="10dp"
            android:paddingBottom="3dp"
            android:text="03/03/2001"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_age2"
            app:layout_constraintTop_toBottomOf="@+id/settings_server_address" />

        <TextView
            android:id="@+id/textview_age2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:text="BIRTH DATE"
            android:textColor="#21618C"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/view_age"
            app:layout_constraintTop_toBottomOf="@+id/settings_alert" />

        <TextView
            android:id="@+id/main_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="FULL NAME"
            android:textColor="#21618C"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_img" />

        <TextView
            android:id="@+id/view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_btn_leader"
            android:fontFamily="sans-serif-black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="OLI-00001"
            android:textColor="#FFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/settings_server_address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_img" />

        <TextView
            android:id="@+id/textview_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:text="AGE"
            android:textColor="#21618C"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_alert" />

        <TextView
            android:id="@+id/settings_alert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Cant connect to server!"
            android:textColor="@color/colorDanger"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_server_address" />

        <TextView
            android:id="@+id/settings_server_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_edittext"
            android:clickable="false"
            android:focusable="false"
            android:ems="10"
            style="@style/Widget.AppCompat.EditText"
            android:gravity="start|top"
            android:paddingStart="10dp"
            android:paddingBottom="3dp"
            android:text="qweqwe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_information" />

        <TextView
            android:id="@+id/view_age"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_edittext"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:paddingBottom="3dp"
            android:text="99"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textview_age"
            app:layout_constraintTop_toBottomOf="@+id/settings_server_address" />

        <ImageView
            android:id="@+id/view_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/listview_background_success"
            android:padding="2dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_close"
            android:layout_width="126dp"
            android:layout_height="31dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/round_btn_danger"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_address">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_cancel"
                app:layout_constraintBottom_toBottomOf="@+id/textView10"
                app:layout_constraintEnd_toStartOf="@+id/textView10"
                app:layout_constraintTop_toTopOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:fontFamily="sans-serif-black"
                android:text="CLOSE"
                android:textColor="@color/colorLightDanger"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>